<% include ../pratical/header %>

    <div class="container">
        <div align = auto width = 30%>
            <div style="text-align: center">
                <h2>Edit your camp ground</h2>
            </div>
            <div style="width: 30%; margin: 0 auto">
                    <form action="/index/<%=htmlCampground._id%>?_method=PUT" method=POST>
                        <div class="form-group">
                            <input type="text" class="form-control" name="updateCampground[name]" value=<%=htmlCampground.name%>>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="updateCampground[image]" value=<%=htmlCampground.image%>>    
                        </div>
                        <div class = "form-group">
                            <textarea rows="10" class = "form-control" name = "updateCampground[description]"  value=<%=htmlCampground.description%>></textarea>
                        </div>
                        <input class="btn btn-primary btn-block btn-lg form-group" type="submit">
                    </form>
            </div>
        </div>
    </div>

<% include ../pratical/footer %>